<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CookbookClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CookbookClient"
    Shell.FlyoutBehavior="Disabled"
    Title="CookbookClient">

    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate local:LoginPage}" />

    <ShellContent Route="RegisterPage"
                  ContentTemplate="{DataTemplate local:RegisterPage}" />

    <ShellContent Route="MainPage"
                  ContentTemplate="{DataTemplate local:MainPage}" />

    <ShellContent Route="CategoriesPage"
                  ContentTemplate="{DataTemplate local:CategoriesPage}"/>

    <ShellContent Route="CategoryEditPage"
                  ContentTemplate="{DataTemplate local:CategoryEditPage}" />

    <ShellContent Route="IngredientsPage"
                  ContentTemplate="{DataTemplate local:IngredientsPage}" />
    <ShellContent Route="IngredientsEditPage"
                  ContentTemplate="{DataTemplate local:IngredientEditPage}" />
    <ShellContent Route="RecipesPage"
                  ContentTemplate="{DataTemplate local:RecipesPage}" />
    <ShellContent Route="RecipeEditPage"
              ContentTemplate="{DataTemplate local:RecipeEditPage}" />

</Shell>
